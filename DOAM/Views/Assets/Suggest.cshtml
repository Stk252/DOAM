@model DOAM.Application.ViewModels.Assets.AssetSuggestViewModel
@{
    ViewBag.Title = "Suggest";
    ViewBag.SubTitle = "Suggest an asset";
}

    <div class="site-section bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-7 mb-5" data-aos="fade">



                    <form action="#" class="p-5 bg-white">

                        <h4 class="text-black">Provide asset information</h4>
                        <hr />


                        <div class="row form-group">
                            <div class="col-md-12">
                                <label class="text-black" for="url">URL</label>
                                <input type="text" id="url" class="form-control">
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label class="text-black" for="description">Description</label>
                                <textarea name="description" id="description" cols="30" rows="7" class="form-control" placeholder="Write asset description here..."></textarea>
                            </div>
                        </div>


                        <div class="row form-group">
                            <div class="col-md-12">
                                <input type="submit" value="Submit" class="btn btn-primary py-2 px-4 text-white">
                            </div>
                        </div>


                    </form>
                </div>

            </div>
        </div>
    </div>

