@model DOAM.Domain.Models.SearchForm

<div class="site-mobile-menu">
    <div class="site-mobile-menu-header">
        <div class="site-mobile-menu-close mt-3">
            <span class="icon-close2 js-menu-toggle"></span>
        </div>
    </div>
    <div class="site-mobile-menu-body"></div>
</div>

@Html.Partial("_NavBar")


<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(../../Images/dam-2.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">

            <div class="col-md-10 align-self-end mt-5 pt-5" data-aos="fade-up" data-aos-delay="400">
                <div class="row justify-content-center">
                    <div class="col-md-8 text-center">
                        <h1>@ViewBag.Title</h1>
                        @if (ViewBag.SubTitle != null)
                        {
                            <p class="mb-0">@ViewBag.SubTitle</p>
                        }
                    </div>
                </div>
            </div>

                <div class="col-md-10 align-self-end" data-aos="fade-up" data-aos-delay="400">
                    <div class="form-search-wrap mb-3" data-aos="fade-up" data-aos-delay="200">
                        @using (Html.BeginForm("Index", "Assets", FormMethod.Get))
                        {
                            <div class="row align-items-center">
                                <div class="col-lg-12 mb-4 mb-xl-0 col-xl-10">
                                    <input type="text" id="query" name="@Html.NameFor(m => m.Query).ToString().ToLowerInvariant()"
                                           autocomplete="off" class="form-control rounded" placeholder="What are you looking for?" value="@Model.Query">
                                </div>

                                <div class="col-lg-12 col-xl-2 ml-auto text-right">
                                    <input type="submit" class="btn btn-primary btn-block rounded" value="Search">
                                </div>

                            </div>
                        }
                    </div>
                </div>
        </div>
    </div>
</div>