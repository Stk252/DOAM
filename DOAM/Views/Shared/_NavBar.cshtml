@using DOAM.Helpers

<header class="site-navbar container py-0 bg-white" role="banner">

    <div class="row align-items-center">

        <div class="col-6 col-xl-2">
            <h1 class="mb-0 site-logo">
                <a href="@Url.Action("Index", "Home")" class="text-black mb-0">
                    <img class="nav-logo" src="~/Images/Logo.png" alt="" />OAM
                </a>
            </h1>
        </div>
        <div class="col-12 col-md-10 d-none d-xl-block">
            <nav class="site-navigation position-relative text-right" role="navigation">

                <ul class="site-menu js-clone-nav mr-auto d-none d-lg-block">

                    <li class="@Url.IsLinkActive("Index", "Home")">@Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: null)</li>
                    <li class="@Url.IsLinkActive("Index", "Assets")">@Html.ActionLink("Assets", "Index", "Assets", routeValues: null, htmlAttributes: null)</li>
                    <li class="@Url.IsLinkActive("About", "Home")">@Html.ActionLink("About", "About", "Home", routeValues: null, htmlAttributes: null)</li>
                    <li class="@Url.IsLinkActive("Contact", "Home")">@Html.ActionLink("Contact", "Contact", "Home", routeValues: null, htmlAttributes: null)</li>

                    @Html.Partial("_LoginPartial")
                </ul>
            </nav>
        </div>


        <div class="d-inline-block d-xl-none ml-auto py-3 col-6 text-right" style="position: relative; top: 3px;">
            <a href="#" class="site-menu-toggle js-menu-toggle text-black"><span class="icon-menu h3"></span></a>
        </div>

    </div>

</header>